<scroll-view>
  <view class="meta">
    <image class="poster" src="{{movie.images.large}}" background-size="cover"></image>
    <text class="title">{{movie.title}}({{movie.year}})</text>
    <view class="info">评分：{{movie.rating.average}}</view>
    <view class="info">导演：<text wx:for="{{movie.directors}}">{{item.name}}</text></view>  
    <view class="info">主演：<text wx:for="{{movie.casts}}">{{item.name}} </text></view>    
  </view>
  <view class="summary">
    <text class="lable">摘要：</text>
    <text class="content">{{movie.summary}}</text>
  </view>
</scroll-view>
